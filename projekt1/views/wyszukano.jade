extends layout

block content
  div
    img.profilowe(src='/MateuszDobija.jpg', alt='Zdjęcie profilowe')
    .kursy
      h2.nazwisko Baza samochodów
      p
        | Poniżej możesz zapoznać się z listą samochodów dostępnych w podanym terminie:
        br
        | Termin: #{start} - #{end}
      table
        tr
          th numer rejestracyjny
          th marka
          th model
          th rok
          th zdjęcie
          th cena [dzień]
          th dni
          th cena[dni]
        each item in data 
          tr
            td #{item.registration_number}
            td #{item.make}
            td #{item.model}
            td #{item.year}
            td.samochody
              img#zdjecie(src='#{item.registration_number}'+'.jpg', alt='Zdjęcie profilowe')
            td #{item.price}  
            td #{term}
            - var a = term
            - var b = item.price
            - var result = parseFloat(a)*parseFloat(b)
            td #{result}    
  footer
    p Mateusz Dobija © 2019
